<div class="container" id="create_student_wrapper">

    <form id="createStudentForm">
        <div class="mb-3">
            <label class="form-label">Student Name</label>
            <input type="text" class="form-control" name="name">
        </div>

        <div class="mb-3">
            <label class="form-label">Student Age</label>
            <input type="text" class="form-control" name="age">
        </div>

        <div class="mb-3">
            <label class="form-label">Class</label>
            <input type="text" class="form-control" name="class">
        </div>

        <div class="mb-3">
            <label class="form-label">Student ID</label>
            <input type="text" class="form-control" name="studentID">
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" name="email">
        </div>

        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>


<script>

    const createStudentForm = document.getElementById("createStudentForm")

    createStudentForm.addEventListener( 'submit' ,(e) => {
        e.preventDefault()
       var studentFormData = Object.fromEntries(new FormData(createStudentForm)) 
       console.log(studentFormData)

        fetch('/users/saveUser', {
            method: "POST",
            headers: { 
                    "Content-Type": "application/json", 
                },
                body: JSON.stringify(studentFormData)
        }).then((response) => response.json()
        ).then((data) => { 
                console.log(data) 

            
        }) 

    })

</script>